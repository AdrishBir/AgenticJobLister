# Telegram Bot Token
TELEGRAM_TOKEN='SAMPLE-TOKEN'

# OpenRouter / DeepSeek API Key
OPENROUTER_API_KEY="SAMPLE-API-KEY"

# (Optional) OpenRouter endpoint (if different from default)
OPENROUTER_ENDPOINT=https://api.openrouter.ai/v1/llm

# Google Sheets configuration
GOOGLE_SHEETS_CREDENTIALS_PATH=path/to/your/credentials.json
GOOGLE_SHEET_ID=your-google-sheet-id

# Scraper configuration (comma-separated list of user agents)
SCRAPER_USER_AGENTS=Mozilla/5.0 (Windows NT 10.0; Win64; x64),Chrome/91.0

# Request timeout (in seconds)
REQUEST_TIMEOUT=10

# LLM API maximum retries
LLM_MAX_RETRIES=3
